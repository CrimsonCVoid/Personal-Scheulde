# Canvas LMS Configuration
CANVAS_DOMAIN=https://yourdomain.instructure.com
CANVAS_CLIENT_ID=your_canvas_client_id
CANVAS_CLIENT_SECRET=your_canvas_client_secret
CANVAS_REDIRECT_URI=http://localhost:3000/auth/canvas/callback

# Server Configuration
PORT=3000
NODE_ENV=development
JWT_SECRET=your_jwt_secret_key_here
API_VERSION=v1

# Database Configuration
DATABASE_URL=sqlite:./data/canvas_integration.db
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration (for job queue and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Canvas API Rate Limiting
CANVAS_RATE_LIMIT_PER_SECOND=10
CANVAS_RATE_LIMIT_BURST=50

# Logging
LOG_LEVEL=info
LOG_FILE=logs/canvas-integration.log

# Sync Configuration
SYNC_INTERVAL_MINUTES=30
BATCH_SIZE=50

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000